#include <iostream>
#include <conio.h>

int main ()
{
    int num;
    std::cout<<"Task number: ";
    std::cin>> num;
    switch(num){
case 1:{
    int n, i;
    std::cout << "Insert size of massive: ";
    std::cin >> n;
    if (n>0){
    int a[n];
    a[0]=1;
    for (i=1;i<n;i++)
        a[i]=a[i-1]+2;
        
    for (i=0;i<n;i++)
        std::cout << a[i];}
    else std::cout <<"no";
    break;}
case 2:{
    int n, i, d;
    std::cout << "Insert size of massive: ";
    std::cin >> n;
    if (n>1)
    {int a[n];
    std::cout << "Insert A ";
    std::cin >> a[0];
    std::cout << "Insert D ";
    std::cin >> d;

    for (i=1;i<n;i++)
        a[i]=a[i-1]*d;
        
    for (i=0;i<n;i++)
        std::cout << a[i] <<" ";
    }
    else std::cout <<"no";
    break;}
case 3:{
    int n, i;
    std::cout << "Insert size of massive: ";
    std::cin >> n;
    if (n>2)
    {int a[n];
    std::cout << "Insert A ";
    std::cin >> a[0];
    std::cout << "Insert B ";
    std::cin >> a[1];
    a[2]=a[0]+a[1];
    for (i=3;i<n;i++)
        a[i]=a[i-1]*2;
        
    for (i=0;i<n;i++)
        std::cout << a[i] <<" ";}
    break;}
case 4:{
    int n, i;
    std::cout << "Insert size of massive: ";
    std::cin >> n;
    int a[n];
    for (i=0;i<n;i++)
        std::cin >> a[i];
    for (i=0;i<n/2;i++)
        std::cout << a[i] <<" "<< a[n-i-1] <<" ";
    if (n%2==1)
        std::cout << a[n/2];
    break;}
case 5:{
    int n, i;
    std::cout << "Insert size of massive: ";
    std::cin >> n;
    int a[n];
    for (i=0;i<n;i++)
        std::cin >> a[i];
    for (i=0;i<n;i+=2)
        std::cout << a[i] <<" ";
    if (n%2==0) i=n-1;
    else i=n-2;
    for (;i>0;i-=2)
        std::cout << a[i] <<" ";
    break;}
}
}

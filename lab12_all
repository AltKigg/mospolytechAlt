//task1
#include <iostream>

int main()
{
    setlocale(LC_ALL, "Russian");
    int d, m;
    std::cout<<"day:";
    std::cin>>d;
    std::cout<<"month:";
    std::cin>>m;
    heree:
    switch (d) 
    {
        case 1: std::cout << "первое ";break;
        case 2: std::cout << "второе ";break;
        case 3: std::cout << "третье ";break;   
        case 4: std::cout << "четвертое ";break;        
        case 5: std::cout << "пятое ";break;
        case 6: std::cout << "шестое ";break;
        case 7: std::cout << "седьмое ";break;
        case 8: std::cout << "восьмое ";break;
        case 9: std::cout << "девятое ";break;
        case 10: std::cout << "десятое";break;
        case 11: std::cout << "одинадцатое ";break;
        case 12: std::cout << "двенадцатое ";break;
        case 13: std::cout << "тринадцатое ";break;
        case 14: std::cout << "четырнадцатое ";break;
        case 15: std::cout << "пятнадцатое ";break;
        case 16: std::cout << "шестнадцатое ";break;
        case 17: std::cout << "семьнадцатое ";break;
        case 18: std::cout << "восемьнадцатое ";break;   
        case 19: std::cout << "девятнадцатое ";break;        
        case 20: std::cout << "двадцатое ";break;
    }
    if (d>20&d<30)
    {
        std::cout<<"двадцать ";
        d=d%10;
        goto heree;
    }
    if (d==30) std::cout<<"тридцатое ";
    if (d==31) std::cout<<"тридцать первое ";
    switch (m) 
    {
        case 1: std::cout << "января";break;
        case 2: std::cout << "февраля";break;
        case 3: std::cout << "марта";break;   
        case 4: std::cout << "апреля";break;        
        case 5: std::cout << "мая";break;
        case 6: std::cout << "июня";break;
        case 7: std::cout << "июля";break;
        case 8: std::cout << "августа";break;
        case 9: std::cout << "сентября";break;   
        case 10: std::cout << "октября";break;        
        case 11: std::cout << "ноября";break;
        case 12: std::cout << "декабря";break;
    }
    return 0;
}

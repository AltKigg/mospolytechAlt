//task3
#include <iostream>
#include <conio.h>
#include <cmath>

using namespace std;

int main ()
{
    float a, x, y, s1, s2;
    cout<<"X (kg)=";
    cin >> x;
    cout<<"A (rub)=";
    cin >> a;
    cout<<"Y (kg)=";
    cin >> y;
    s1=a/x;
    s2=s1*y;
    cout<<"\n1kg costs="<<s1;
    cout<<"\n"<<y<<"kg costs="<<s2;
    return 0;
}
//task4
#include <iostream>
#include <conio.h>
#include <cmath>

using namespace std;

int main ()
{
    float v1, v2, s, t;
    cout<<"v1=";
    cin >> v1;
    cout<<"v2=";
    cin >> v2;
    cout<<"s=";
    cin >> s;
    cout<<"t=";
    cin >> t;
    s+=(v1+v2)*t;
    cout<<"\nafter "<< t<<" hours S = "<< s;
    return 0;
}
//task5
#include <iostream>
#include <conio.h>
#include <cmath>

using namespace std;

int main ()
{
    float a, b, x;
    cout<<"A=";
    cin >> a;
    cout<<"B=";
    cin >> b;
    x=-b/a;
    cout<<"\nx = "<< x;
    return 0;
}
//task6
#include <iostream>
#include <conio.h>
#include <cmath>

using namespace std;

int main ()
{
    float a1, b1, c1, a2, b2, c2, x, y;
    cout<<"A1=";
    cin >> a1;
    cout<<"B1=";
    cin >> b1;
    cout<<"C1=";
    cin >> c1;
    cout<<"A2=";
    cin >> a2;
    cout<<"B2=";
    cin >> b2;
    cout<<"C2=";
    cin >> c2;
    y= (c1*a2-c2*a1)/(a2*b1-a1*b2);
    x= (c1-b1*y)/a1;
    cout<<"\nx = "<< x;
    cout<<"\ny = "<< y;
    return 0;
}

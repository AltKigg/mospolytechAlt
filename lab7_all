//task1
#include <iostream>
#include <conio.h>
#include <cmath>

using namespace std;

int main ()
{
    float a, r;
    cout<<"A=";
    cin >> a;
    r=a*M_PI/180;
    cout<<"\n"<<r;
    return 0;
}
